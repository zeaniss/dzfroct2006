@{
    Layout = "~/Views/Shared/_LayoutSearch.cshtml";
}

@model dzfroct2006.Models.Hotels

<div>
    <ul class="list-inline">
        <li><b>@Html.DisplayFor(model => model.Name)</b> : <span class="glyphicon glyphicon-home"></span>@Html.DisplayFor(model => model.Address)</li>
        <br />
        <li><span class="glyphicon glyphicon-phone-alt"></span>@Html.DisplayFor(model => model.PhoneNumber1) - <span class="glyphicon glyphicon-print"></span>@Html.DisplayFor(model => model.FaxNumber1)
            <br />
        </li>
    </ul>
    <hr class="thin">
</div>  

    <ul class="bxslider">
        <li><img class="img" src="~/Images/HotelsImages/HotelTest/hotelTest2.png" /></li>
        <li><img class="img" src="~/Images/HotelsImages/HotelTest/hotelTest1.png" /></li>
    </ul>


<script type="text/javascript">
    $('.bxslider').bxSlider({
        auto: true,
        autoControls: true
    });
</script>
<div>
    <hr class="thin">
</div>

